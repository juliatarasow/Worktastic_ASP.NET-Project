@model JobPostingModel
@*enctype="multipart/form-data" -> files dürfen übertragen werden*@
<form asp-controller="JobPosting" asp-action="CreateEditJob" enctype="multipart/form-data">
	<a asp-controller="JobPosting" asp-action="Index">
		<svg class="icon ps-1 mb-3" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512"><path d="M9.4 233.4c-12.5 12.5-12.5 32.8 0 45.3l160 160c12.5 12.5 32.8 12.5 45.3 0s12.5-32.8 0-45.3L109.2 288 416 288c17.7 0 32-14.3 32-32s-14.3-32-32-32l-306.7 0L214.6 118.6c12.5-12.5 12.5-32.8 0-45.3s-32.8-12.5-45.3 0l-160 160z"/></svg>
	</a>
	<div class="card">
		<div class="card-header">
			<h4>
				Inserat anlegen oder bearbeiten
			</h4>
		</div>

		<div class="card-body">
			<input type="hidden" asp-for="Id" />
			<div class="row pb-2">
				<div class="col">
					<label>
						Jobtitel
					</label>
					<input class="form-control" type="text" placeholder="Jobtitel" asp-for="JobTitle" />
				</div>
				<div class="col">
					<label>
						Ort
					</label>
					<input class="form-control" type="text" placeholder="Ort" asp-for="JobLocation" />
				</div>
			</div>

		<div class="row pb-2">
				<div class="col">
					<label>
						Hier bitte eine Beschreibung zum Job eingeben
					</label>
					<textarea class="form-control" asp-for="JobDescription"></textarea>
				</div>
			</div>

			<div class="row pb-2">
				<div class="col">
					<label>
						Startdatum
					</label>
					<input class="form-control" type="text" placeholder="Startdatum" asp-for="StartDate" />
				</div>
				<div class="col">
					<label>
						Jahresgehalt
					</label>
					<input class="form-control" placeholder="Jahresgehalt" asp-for="Salary" />
				</div>
			</div>

			<div class="row pb-2">
				<div class="col">
					<label>
						Firmenbezeichnung
					</label>
					<input class="form-control" placeholder="Firmenbezeichnung" asp-for="CompanyName" />
				</div>
				<div class="col">
					<label>
						Ansprechpartner
					</label>
					<input class="form-control" placeholder="Ansprechpartner" asp-for="ContactName" />
				</div>
			</div>

			<div class="row pb-2">
				<div class="col">
					<label>
						Kontakt-Email-Adresse
					</label>
					<input class="form-control" type="mail" placeholder="Kontakt-Email-Adresse" asp-for="ContactMail" />
				</div>
				<div class="col">
					<label>
						Firmenwebseite
					</label>
					<input class="form-control" type="url" placeholder="Firmenwebseite" asp-for="CompanyWebsite" />
				</div>
			</div>

			<div class="col">
				<label>
					Firmenlogo
				</label>
				
				@if (Model?.CompanyImage != null)
				{
					<input class="form-control" type="file" asp-for="CompanyImage" name="file" />
					<p class="pt-2">Aktuelles Firmenlogo:</p>
					<img src="data:image/png;base64,@Convert.ToBase64String(Model.CompanyImage)" height="100" />
				}
				else
				{
					<input class="form-control" type="file" asp-for="CompanyImage" name="file" />
				}
			</div>
		</div>

		<div class="card-footer">
			<button class="btn btn-primary  me-3" type="submit">
				Speichern
			</button>
			<a class="btn btn-outline-danger" asp-controller="JobPosting" asp-action="Index">Abbrechen</a>
		</div>		
	</div>
</form>
